{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/unified-esm",
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "node10",
    "ignoreDeprecations": "5.0",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "src/unified/**/*",
    "src/utils/**/*",
    "src/evm/**/*",
    "src/solana/**/*",
    "typechain-types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test/**/*",
    "target/types/**/*"
  ]
}