{
  "cSpell.enabled": false,
  
  // Language associations
  "files.associations": {
    "*.sol": "solidity",
    "*.rs": "rust"
  },
  
  // Solidity configuration
  "solidity.defaultCompiler": "remote",
  "solidity.compileUsingRemoteVersion": "v0.8.24",
  "solidity.enabledAsYouTypeCompilationErrorCheck": true,
  
  // Rust configuration
  "rust-analyzer.linkedProjects": ["programs/mail_service/Cargo.toml", "programs/mailer/Cargo.toml", "programs/mail_box_factory/Cargo.toml"],
  "rust-analyzer.checkOnSave.command": "clippy",
  
  // TypeScript configuration
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.suggest.includeCompletionsForModuleExports": true,
  "typescript.preferences.includePackageJsonAutoImports": "on",
  "typescript.inlayHints.parameterNames.enabled": "all",
  "typescript.inlayHints.variableTypes.enabled": true,
  "typescript.inlayHints.functionLikeReturnTypes.enabled": true,
  "typescript.preferences.quoteStyle": "single",
  
  // Editor settings for AI assistance
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },
  "editor.suggest.showStatusBar": true,
  "editor.parameterHints.enabled": true,
  "editor.quickSuggestions": {
    "other": "on",
    "comments": "on",
    "strings": "on"
  },
  
  // File management optimized for AI development
  "files.exclude": {
    "**/node_modules": true,
    "**/target/debug": true,
    "**/target/release": true,
    "**/artifacts": true,
    "**/cache": true,
    "**/typechain-types": false,
    "**/test-ledger": true,
    "**/.git": false
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/target": true,
    "**/artifacts": true,
    "**/cache": true
  },
  
  // Prettier configuration
  "prettier.singleQuote": true,
  "prettier.trailingComma": "es5",
  
  // Git settings
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  
  // Terminal settings for multi-chain development
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.env.osx": {
    "PATH": "${env:PATH}:${workspaceFolder}/node_modules/.bin:${env:HOME}/.cargo/bin"
  },
  
  // AI development specific settings
  "json.schemas": [
    {
      "fileMatch": [".ai-config.json"],
      "schema": {
        "type": "object",
        "properties": {
          "name": {"type": "string"},
          "version": {"type": "string"},
          "ai_development": {"type": "object"}
        }
      }
    }
  ],
  
  // Explorer file nesting for better organization
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.sol": "${capture}.abi.json",
    "package.json": "package-lock.json, .npmrc",
    "Cargo.toml": "Cargo.lock",
    "Anchor.toml": "target/",
    ".env": ".env.*, .env.local",
    "CLAUDE.md": "AI_DEVELOPMENT_GUIDE.md, .ai-config.json",
    "README.md": "docs/"
  },
  
  // Enhanced search for multi-language projects
  "search.showLineNumbers": true,
  "search.smartCase": true
}