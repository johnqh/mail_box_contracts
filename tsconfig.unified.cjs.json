{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/unified",
    "module": "commonjs",
    "target": "ES2020",
    "moduleResolution": "node10",
    "ignoreDeprecations": "5.0",
    "jsx": "react"
  },
  "include": [
    "src/unified/**/*",
    "src/utils/**/*",
    "src/evm/**/*",
    "src/solana/**/*",
    "src/react/**/*",
    "typechain-types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test/**/*",
    "target/types/**/*"
  ]
}